<div class="card">
  <div class="list-group list-group-flush">
    <%= link_to admin_root_path,
        class: "list-group-item list-group-item-action #{current_page?(admin_root_path) ? 'active' : ''}" do %>
      ダッシュボード
    <% end %>

    <%= link_to admin_users_path,
        class: "list-group-item list-group-item-action #{controller_name == 'users' ? 'active' : ''}" do %>
      ユーザー管理
    <% end %>

    <%= link_to admin_posts_path,
        class: "list-group-item list-group-item-action #{controller_name == 'posts' ? 'active' : ''}" do %>
      句の管理
    <% end %>

    <%= link_to admin_themes_path,
        class: "list-group-item list-group-item-action #{controller_name == 'themes' ? 'active' : ''}" do %>
      お題の管理
    <% end %>
  </div>
</div>