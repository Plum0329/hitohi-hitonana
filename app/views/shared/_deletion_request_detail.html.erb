<div class="container py-5">
  <h2 class="mb-4">削除申請の詳細</h2>

  <div class="card mb-4">
    <div class="card-header">
      対象の<%= content_type %>
    </div>
    <div class="card-body">
      <%= record.display_content %>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      削除理由
    </div>
    <div class="card-body">
      <%= simple_format(h(deletion_request.reason)) %>
    </div>
  </div>

  <div class="text-center">
    <%= link_to "戻る", return_path, class: "btn btn-secondary" %>
  </div>
</div>