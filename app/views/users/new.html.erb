<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4">ユーザー登録</h1>

      <%= form_with(model: @user, local: true) do |f| %>
        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :name, '名前', class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :email, 'メールアドレス', class: 'form-label' %>
          <span class="text-muted small d-block">※登録後、確認メールが送信されます</span>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :password, 'パスワード', class: 'form-label' %>
          <span class="text-muted small d-block">(半角英字と数字をそれぞれ1文字以上含む8文字以上)</span>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, 'パスワード確認', class: 'form-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <div class="text-center">
          <%= f.submit '登録', class: 'button button-primary w-100 mb-3' %>
          <%= link_to 'ログインページへ', login_path, class: 'text-muted' %>
        </div>
      <% end %>
    </div>
  </div>
</div>